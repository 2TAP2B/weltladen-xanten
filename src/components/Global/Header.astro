<!-- Main Header with Logo and Navigation - Sticky -->
<header class="sticky top-0 z-50 w-full bg-white dark:bg-gray-800 border-b border-gray-200 dark:border-gray-700 shadow-sm">
    <div class="container">
      <div class="flex items-center justify-between py-1.5 md:py-2">
        <!-- Logo -->
