---
import Button from "../UI/Button.astro";

interface Organization {
  id: number;
  title: string;
  description: string;
  icon: string;
  color: string;
  link: string;
}

interface Props {
  organizations?: Organization[];
  title?: string;
  subtitle?: string;
}

const { 
  organizations = [], 
  title = "Eine Welt Gruppe Xanten",
  subtitle = "Die Eine Welt Gruppe Xanten besteht aus drei Bereichen, die gemeinsam für eine gerechtere und nachhaltigere Welt arbeiten"
} = Astro.props;

// Icon mapping for Material Design icons
const iconMap: Record<string, string> = {
  store: `<path d="M20 4H4v2h16V4zm1 10v-2l-1-5H4l-1 5v2h1v6h10v-6h4v6h2v-6h1zm-9 4H6v-4h6v4z"/>`,
  group: `<path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>`,
  school: `<path d="M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82zM12 3L1 9l11 6 9-4.91V17h2V9L12 3z"/>`,
  volunteer_activism: `<path d="M16 13c3.09-2.81 6-5.44 6-7.7C22 3.45 20.55 2 18.7 2c-1.04 0-2.05.49-2.7 1.25C15.35 2.49 14.34 2 13.3 2 11.45 2 10 3.45 10 5.3c0 2.26 2.91 4.89 6 7.7zm-2.7-9c.44 0 .89.21 1.18.55L16 6.34l1.52-1.79c.29-.34.74-.55 1.18-.55.74 0 1.3.56 1.3 1.3 0 1.12-2.04 3.17-4 4.99-1.96-1.82-4-3.88-4-4.99 0-.74.56-1.3 1.3-1.3z"/><path d="M20 17h-7l-2.09-.73.33-.94L13 16h2.82c.65 0 1.18-.53 1.18-1.18 0-.49-.31-.93-.77-1.11L8.97 11H7v9.02L14 22l8.01-3v-.5c0-.83-.67-1.5-1.5-1.5h-.51z"/>`,
  public: `<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"/>`,
  campaign: `<path d="M18 11v2h4v-2h-4zm-2 6.61c.96.71 2.21 1.65 3.2 2.39.4-.53.8-1.07 1.2-1.6-.99-.74-2.24-1.68-3.2-2.4-.4.54-.8 1.08-1.2 1.61zM20.4 5.6c-.4-.53-.8-1.07-1.2-1.6-.99.74-2.24 1.68-3.2 2.4.4.53.8 1.07 1.2 1.6.96-.72 2.21-1.65 3.2-2.4zM4 9c-1.1 0-2 .9-2 2v2c0 1.1.9 2 2 2h1v4h2v-4h1l5 3V6L8 9H4zm11.5 3c0-1.33-.58-2.53-1.5-3.35v6.69c.92-.81 1.5-2.01 1.5-3.34z"/>`
};

// Default fallback icon
const defaultIcon = `<path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>`;
---

<section class="py-16 bg-gradient-to-b from-gray-50 to-white">
  <div class="container mx-auto px-4">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">
        {title}
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        {subtitle}
      </p>
    </div>

    <!-- Organizations Grid -->
    {organizations.length > 0 ? (
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        {organizations.map((org) => (
          <div class="bg-white rounded-lg shadow-md hover:shadow-xl transition-shadow duration-300 p-8 text-center">
            <!-- Icon -->
            <div class="mb-6 flex justify-center">
              <div 
                class="p-4 rounded-full"
                style={`background-color: ${org.color}20`}
              >
                <svg 
                  class="w-12 h-12" 
                  fill={org.color}
                  viewBox="0 0 24 24"
                  set:html={iconMap[org.icon] || defaultIcon}
                />
              </div>
            </div>

            <!-- Title -->
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              {org.title}
            </h3>

            <!-- Description -->
            <p class="text-gray-600 mb-6">
              {org.description}
            </p>

            <!-- Button -->
            <Button href={org.link}>
              Mehr erfahren
            </Button>
          </div>
        ))}
      </div>
    ) : (
      <!-- Fallback when no organizations -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 mb-12">
        <div class="bg-white rounded-lg shadow-md p-8 text-center">
          <div class="mb-6 flex justify-center">
            <div class="p-4 rounded-full bg-blue-100">
              <svg class="w-12 h-12 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20 4H4v2h16V4zm1 10v-2l-1-5H4l-1 5v2h1v6h10v-6h4v6h2v-6h1zm-9 4H6v-4h6v4z"/>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Weltladen</h3>
          <p class="text-gray-600 mb-6">Fair gehandelte Produkte aus aller Welt für eine gerechtere Zukunft.</p>
          <Button href="#">
            Mehr erfahren
          </Button>
        </div>

        <div class="bg-white rounded-lg shadow-md p-8 text-center">
          <div class="mb-6 flex justify-center">
            <div class="p-4 rounded-full bg-purple-100">
              <svg class="w-12 h-12 text-purple-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M16 11c1.66 0 2.99-1.34 2.99-3S17.66 5 16 5c-1.66 0-3 1.34-3 3s1.34 3 3 3zm-8 0c1.66 0 2.99-1.34 2.99-3S9.66 5 8 5C6.34 5 5 6.34 5 8s1.34 3 3 3zm0 2c-2.33 0-7 1.17-7 3.5V19h14v-2.5c0-2.33-4.67-3.5-7-3.5zm8 0c-.29 0-.62.02-.97.05 1.16.84 1.97 1.97 1.97 3.45V19h6v-2.5c0-2.33-4.67-3.5-7-3.5z"/>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Arbeitskreis Asyl</h3>
          <p class="text-gray-600 mb-6">Unterstützung und Integration von Geflüchteten in unserer Gemeinschaft.</p>
          <Button href="#">
            Mehr erfahren
          </Button>
        </div>

        <div class="bg-white rounded-lg shadow-md p-8 text-center">
          <div class="mb-6 flex justify-center">
            <div class="p-4 rounded-full bg-orange-100">
              <svg class="w-12 h-12 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
                <path d="M5 13.18v4L12 21l7-3.82v-4L12 17l-7-3.82zM12 3L1 9l11 6 9-4.91V17h2V9L12 3z"/>
              </svg>
            </div>
          </div>
          <h3 class="text-2xl font-bold text-gray-900 mb-4">Bildung und Projekte</h3>
          <p class="text-gray-600 mb-6">Bildungsarbeit und Projekte für eine nachhaltige und gerechte Welt.</p>
          <Button href="#">
            Mehr erfahren
          </Button>
        </div>
      </div>
    )}
  </div>
</section>
