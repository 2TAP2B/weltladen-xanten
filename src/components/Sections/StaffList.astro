---
import { getCollection } from "astro:content";
import { getStaffMembers, getAssetUrl } from "../../utils/directus";

const { showAll = true, limit = 6 } = Astro.props;

// Try to fetch from Directus first, fallback to local content
let staffMembers = [];

try {
  const directusStaff = await getStaffMembers();
  console.log('Directus Staff fetched:', directusStaff?.length || 0, 'members');
  if (directusStaff && directusStaff.length > 0) {
    staffMembers = directusStaff.slice(0, showAll ? undefined : limit);
    console.log('Using Directus staff data');
  } else {
    console.log('No Directus staff found, using local content fallback');
    // Fallback to local content
    const allStaff = await getCollection("staff", ({ data }) =>
      import.meta.env.PROD ? !data.draft : true
    );
    staffMembers = allStaff
      .sort((a, b) => a.data.order - b.data.order)
      .slice(0, showAll ? undefined : limit)
      .map(staff => ({
        name: staff.data.name,
        position: staff.data.title,
        bio: staff.data.bio,
        email: staff.data.email,
        phone: staff.data.phone,
        photo: staff.data.image,
        department: '',
        linkedin_url: '',
        website_url: '',
        specializations: '',
        languages: '',
        office_hours: '',
        mobile: ''
      }));
  }
} catch (error) {
  console.error('Error fetching staff:', error);
  // Ultimate fallback to local content
  const allStaff = await getCollection("staff", ({ data }) =>
    import.meta.env.PROD ? !data.draft : true
  );
  staffMembers = allStaff
    .sort((a, b) => a.data.order - b.data.order)
    .slice(0, showAll ? undefined : limit)
    .map(staff => ({
      name: staff.data.name,
      position: staff.data.title,
      bio: staff.data.bio,
      email: staff.data.email,
      phone: staff.data.phone,
      photo: staff.data.image,
      department: '',
      linkedin_url: '',
      website_url: '',
      specializations: '',
      languages: '',
      office_hours: '',
      mobile: ''
    }));
}
---

<!-- ================= MITARBEITER GRID ================= -->
<section id="mitarbeiter" class="py-16 bg-white dark:bg-gray-900">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4 text-gray-900 dark:text-white">Unser Team</h2>
    <p class="text-center text-gray-600 dark:text-gray-400 mb-12">
      Lernen Sie die engagierten Menschen kennen, die unsere Organisation vorantreiben
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 auto-rows-fr">
      {staffMembers.map(member => (
        <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden flex flex-col h-full border border-gray-200 dark:border-gray-700 hover:shadow-xl transition-shadow duration-300">
          <!-- Foto -->
          <div class="relative w-full pb-[100%] bg-gray-200 dark:bg-gray-700">
            {member.photo ? (
              <img
                src={member.photo?.startsWith('/') ? member.photo : getAssetUrl(member.photo || '', { width: 400, height: 400, fit: 'cover', quality: 80 })}
                alt={member.name}
                class="absolute inset-0 w-full h-full object-cover object-center"
                loading="lazy"
              />
            ) : (
              <div class="absolute inset-0 w-full h-full flex items-center justify-center bg-gradient-to-br from-primary-100 to-primary-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-24 w-24 text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
              </div>
            )}
          </div>
          
          <div class="p-6 flex flex-col flex-1 justify-between">
            <div>
              <h3 class="text-xl font-bold mb-1 text-gray-900 dark:text-white">{member.name}</h3>
              <p class="text-orange-600 dark:text-orange-400 font-medium mb-3">{member.position}</p>
              
              {member.bio && (
                <div class="text-gray-700 dark:text-gray-300 text-sm mb-4 leading-relaxed" set:html={member.bio} />
              )}
            </div>
            
            <!-- Kontakt Information -->
            <div class="mt-4 space-y-2 text-sm border-t border-gray-100 dark:border-gray-700 pt-4">
              {member.email && (
                <a
                  href={`mailto:${member.email}`}
                  class="flex items-center text-orange-600 dark:text-orange-400 hover:text-orange-700 dark:hover:text-orange-300 transition-colors"
                  title={`E-Mail an ${member.name}`}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <span class="truncate">{member.email}</span>
                </a>
              )}
              
              {member.phone && (
                <a
                  href={`tel:${member.phone.replace(/\s/g, '')}`}
                  class="flex items-center text-orange-600 dark:text-orange-400 hover:text-orange-700 dark:hover:text-orange-300 transition-colors"
                  title={`Anrufen: ${member.name}`}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <span>{member.phone}</span>
                </a>
              )}
            </div>
          </div>
        </div>
      ))}
    </div>
    
    {staffMembers.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-500 dark:text-gray-400 text-lg mb-4">Noch keine Mitarbeiter verfügbar</p>
        <p class="text-gray-400 dark:text-gray-500 text-sm">Fügen Sie Mitarbeiter über das Directus CMS hinzu</p>
      </div>
    )}
  </div>
</section>