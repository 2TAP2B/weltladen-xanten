---
import { getCollection } from "astro:content";
import { getStaffMembers, getAssetUrl } from "../../utils/directus";

const { showAll = true, limit = 6 } = Astro.props;

// Try to fetch from Directus first, fallback to local content
let staffMembers = [];

try {
  const directusStaff = await getStaffMembers();
  if (directusStaff && directusStaff.length > 0) {
    staffMembers = directusStaff.slice(0, showAll ? undefined : limit);
  } else {
    // Fallback to local content
    const allStaff = await getCollection("staff", ({ data }) =>
      import.meta.env.PROD ? !data.draft : true
    );
    staffMembers = allStaff
      .sort((a, b) => a.data.order - b.data.order)
      .slice(0, showAll ? undefined : limit)
      .map(staff => ({
        name: staff.data.name,
        position: staff.data.title,
        bio: staff.data.bio,
        email: staff.data.email,
        phone: staff.data.phone,
        photo: staff.data.image,
        department: '',
        linkedin_url: '',
        website_url: '',
        specializations: '',
        languages: '',
        office_hours: '',
        mobile: ''
      }));
  }
} catch (error) {
  console.error('Error fetching staff:', error);
  // Ultimate fallback to local content
  const allStaff = await getCollection("staff", ({ data }) =>
    import.meta.env.PROD ? !data.draft : true
  );
  staffMembers = allStaff
    .sort((a, b) => a.data.order - b.data.order)
    .slice(0, showAll ? undefined : limit)
    .map(staff => ({
      name: staff.data.name,
      position: staff.data.title,
      bio: staff.data.bio,
      email: staff.data.email,
      phone: staff.data.phone,
      photo: staff.data.image,
      department: '',
      linkedin_url: '',
      website_url: '',
      specializations: '',
      languages: '',
      office_hours: '',
      mobile: ''
    }));
}
---

<!-- ================= MITARBEITER GRID ================= -->
<section id="mitarbeiter" class="py-16 bg-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-4">Unser Team</h2>
    <p class="text-center text-gray-600 mb-12">
      Lernen Sie die engagierten Menschen kennen, die unsere Organisation vorantreiben
    </p>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8 auto-rows-fr">
      {staffMembers.map(member => (
        <div class="bg-white rounded-lg shadow-lg overflow-hidden flex flex-col h-full border border-gray-200 hover:shadow-xl transition-shadow duration-300">
          <!-- Foto -->
          <div class="relative w-full pb-[100%]">
            <img
              src={member.photo?.startsWith('/') ? member.photo : getAssetUrl(member.photo, { width: 400, height: 400, fit: 'cover', quality: 80 })}
              alt={member.name}
              class="absolute inset-0 w-full h-full object-cover object-center"
              loading="lazy"
            />
            {member.department && (
              <div class="absolute top-3 left-3 bg-primary-600 text-white px-2 py-1 rounded-full text-xs font-medium">
                {member.department}
              </div>
            )}
          </div>
          
          <div class="p-6 flex flex-col flex-1 justify-between">
            <div>
              <h3 class="text-xl font-bold mb-1 text-gray-900">{member.name}</h3>
              <p class="text-primary-600 font-medium mb-3">{member.position}</p>
              
              {member.bio && (
                <p class="text-gray-700 text-sm mb-4 leading-relaxed">{member.bio}</p>
              )}
              
              {member.specializations && (
                <div class="mb-4">
                  <h4 class="text-sm font-semibold text-gray-900 mb-1">Schwerpunkte:</h4>
                  <p class="text-xs text-gray-600">{member.specializations}</p>
                </div>
              )}
              
              {member.languages && (
                <div class="mb-4">
                  <h4 class="text-sm font-semibold text-gray-900 mb-1">Sprachen:</h4>
                  <p class="text-xs text-gray-600">{member.languages}</p>
                </div>
              )}
            </div>
            
            <!-- Kontakt Information -->
            <div class="mt-4 space-y-2 text-sm border-t border-gray-100 pt-4">
              {member.email && (
                <a
                  href={`mailto:${member.email}`}
                  class="flex items-center text-primary-600 hover:text-primary-700 transition-colors"
                  title={`E-Mail an ${member.name}`}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                  <span class="truncate">{member.email}</span>
                </a>
              )}
              
              {member.phone && (
                <a
                  href={`tel:${member.phone.replace(/\s/g, '')}`}
                  class="flex items-center text-primary-600 hover:text-primary-700 transition-colors"
                  title={`Anrufen: ${member.name}`}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                  <span>{member.phone}</span>
                </a>
              )}
              
              {member.mobile && member.mobile !== member.phone && (
                <a
                  href={`tel:${member.mobile.replace(/\s/g, '')}`}
                  class="flex items-center text-primary-600 hover:text-primary-700 transition-colors"
                  title={`Mobil: ${member.name}`}
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z" />
                  </svg>
                  <span>{member.mobile}</span>
                </a>
              )}
              
              {member.office_hours && (
                <div class="flex items-center text-gray-600">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  <span class="text-xs">{member.office_hours}</span>
                </div>
              )}
              
              <!-- Social Links -->
              <div class="flex gap-3 pt-2">
                {member.linkedin_url && (
                  <a
                    href={member.linkedin_url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-blue-600 transition-colors"
                    title={`${member.name} auf LinkedIn`}
                  >
                    <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.338 16.338H13.67V12.16c0-.995-.017-2.277-1.387-2.277-1.39 0-1.601 1.086-1.601 2.207v4.248H8.014v-8.59h2.559v1.174h.037c.356-.675 1.227-1.387 2.526-1.387 2.703 0 3.203 1.778 3.203 4.092v4.711zM5.005 6.575a1.548 1.548 0 11-.003-3.096 1.548 1.548 0 01.003 3.096zm-1.337 9.763H6.34v-8.59H3.667v8.59zM17.668 1H2.328C1.595 1 1 1.581 1 2.298v15.403C1 18.418 1.595 19 2.328 19h15.34c.734 0 1.332-.582 1.332-1.299V2.298C19 1.581 18.402 1 17.668 1z" clip-rule="evenodd"/>
                    </svg>
                  </a>
                )}
                
                {member.website_url && (
                  <a
                    href={member.website_url}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="text-gray-400 hover:text-primary-600 transition-colors"
                    title={`Website von ${member.name}`}
                  >
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    {staffMembers.length === 0 && (
      <div class="text-center py-12">
        <p class="text-gray-500 text-lg mb-4">Noch keine Mitarbeiter verfügbar</p>
        <p class="text-gray-400 text-sm">Fügen Sie Mitarbeiter über das Directus CMS hinzu</p>
      </div>
    )}
  </div>
</section>