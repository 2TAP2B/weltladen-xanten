---
import BaseLayout from "../layouts/BaseLayout.astro";
import HeroSection from "../components/Sections/HeroSection.astro";
import StoreInfo from "../components/Sections/StoreInfo.astro";
import OrganizationList from "../components/Sections/OrganizationList.astro";
import Card from "../components/UI/Card.astro";
import Button from "../components/UI/Button.astro";
import { getHeroSlides, getStoreInfo, getOrganizations, getEvents, getBlogPosts, getAssetUrl } from "../utils/directus";

// Fetch data from Directus
const heroSlides = await getHeroSlides();
const storeInfo = await getStoreInfo();
const organizations = await getOrganizations();

// Get upcoming events (max 3)
const allEvents = await getEvents();
const now = new Date();
const upcomingEvents = allEvents
  .filter(event => {
    const eventEnd = event.end_date || event.event_date;
    return new Date(eventEnd) >= now;
  })
  .slice(0, 3);

// Get latest blog posts (max 3)
const allBlogPosts = await getBlogPosts();
const latestBlogPosts = allBlogPosts.slice(0, 3);

// Helper function to format date
function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('de-DE', { 
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}
---

<BaseLayout
  title="Eine Welt Gruppe Xanten e.V. - Fairer Handel in Xanten"
  description="Willkommen bei der Eine Welt Gruppe Xanten. Wir setzen uns für fairen Handel und globale Gerechtigkeit ein. Besuchen Sie unseren Weltladen in Xanten."
>
  <HeroSection slides={heroSlides} />

    <!-- Organizations: Eine Welt Gruppe Xanten -->
  <OrganizationList organizations={organizations} />
  
  <!-- Store Info: Opening Hours & Contact -->
  <StoreInfo storeInfo={storeInfo} />
  

  
  <!-- About Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="container">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <div>
          <img 
            src="/eine-welt-gruppe2.webp" 
            alt="Our Church" 
            class="rounded-lg shadow-lg object-cover w-full h-full"
          />
        </div>
        
        <div>
          <h2 class="text-3xl md:text-4xl font-bold mb-6">Alles über die EWGX</h2>
          <p class="text-gray-700 dark:text-gray-300 mb-6 text-lg">
Lorem Ipsum dolor sit amet, consectetur adipiscing elit.          </p>
          <p class="text-gray-700 dark:text-gray-300 mb-8 text-lg">
            Whether you're exploring faith for the first time or looking for a church home, we invite you to join us. Our diverse congregation welcomes people of all ages, backgrounds, and walks of life.
          </p>
          
          <Button href="/ueber-uns">
            Learn More About Us
          </Button>
        </div>
      </div>
    </div>
  </section>
  
  <!-- Upcoming Events Section -->
  <section class="py-16 dark:bg-gray-900">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 dark:text-white">Kommende Veranstaltungen</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Entdecken Sie unsere nächsten Events rund um fairen Handel und Nachhaltigkeit
        </p>
      </div>
      
      {upcomingEvents.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {upcomingEvents.map((event) => (
            <Card
              title={event.title}
              image={event.featured_image ? {
                src: getAssetUrl(event.featured_image, { width: 800, height: 600, fit: 'cover', quality: 80 }),
                alt: event.title
              } : undefined}
              href={`/events/${event.slug}`}
              className="dark:bg-gray-800"
            >
              <div class="space-y-2 mb-4">
                <div class="flex items-start text-gray-600 dark:text-gray-400">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span class="text-sm">{formatDate(event.event_date)}</span>
                </div>
                
                {event.location && (
                  <div class="flex items-start text-gray-600 dark:text-gray-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                    </svg>
                    <span class="text-sm">{event.location}</span>
                  </div>
                )}
              </div>
              
              {event.summary && (
                <p class="text-gray-700 dark:text-gray-300 text-sm line-clamp-3">
                  {event.summary}
                </p>
              )}
            </Card>
          ))}
        </div>
      ) : (
        <div class="text-center py-12 bg-gray-50 dark:bg-gray-800 rounded-lg">
          <p class="text-gray-600 dark:text-gray-400">Derzeit sind keine kommenden Veranstaltungen geplant.</p>
        </div>
      )}
      
      {upcomingEvents.length > 0 && (
        <div class="mt-12 text-center">
          <Button href="/events" variant="primary">
            Alle Veranstaltungen
          </Button>
        </div>
      )}
    </div>
  </section>
  
  <!-- Latest Blog Posts Section -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4 dark:text-white">Aktuelles aus unserem Blog</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Neuigkeiten, Geschichten und Informationen rund um fairen Handel
        </p>
      </div>
      
      {latestBlogPosts.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {latestBlogPosts.map((post) => (
            <Card
              title={post.title}
              image={post.featured_image ? {
                src: getAssetUrl(post.featured_image, { width: 800, height: 600, fit: 'cover', quality: 80 }),
                alt: post.title
              } : undefined}
              href={`/blog/${post.slug}`}
              className="dark:bg-gray-700"
            >
              <div class="mb-3 flex items-center text-gray-600 dark:text-gray-400 text-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                <span>{formatDate(post.published_date)}</span>
              </div>
              
              {post.excerpt && (
                <p class="text-gray-700 dark:text-gray-300 text-sm line-clamp-3">
                  {post.excerpt}
                </p>
              )}
            </Card>
          ))}
        </div>
      ) : (
        <div class="text-center py-12 bg-white dark:bg-gray-700 rounded-lg">
          <p class="text-gray-600 dark:text-gray-400">Noch keine Blogbeiträge vorhanden.</p>
        </div>
      )}
      
      {latestBlogPosts.length > 0 && (
        <div class="mt-12 text-center">
          <Button href="/blog" variant="primary">
            Alle Beiträge
          </Button>
        </div>
      )}
    </div>
  </section>
  
  <!-- Ministries Preview -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800">
    <div class="container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Ministries</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          Discover how you can connect, serve, and grow through our various ministries
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-primary-100 dark:bg-primary-900/30 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-primary-600 dark:text-primary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Children's Ministry</h3>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            Nurturing the spiritual growth of our children through engaging, age-appropriate activities.
          </p>
          <a href="/ministries/childrens-ministry" class="text-primary-600 dark:text-primary-400 font-medium hover:text-primary-700 dark:hover:text-primary-300">
            Learn More →
          </a>
        </div>
        
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-secondary-100 dark:bg-secondary-900/30 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-secondary-600 dark:text-secondary-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Worship Ministry</h3>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            Leading our congregation in worship through music, song, and creative expression.
          </p>
          <a href="/ministries/worship-ministry" class="text-primary-600 dark:text-primary-400 font-medium hover:text-primary-700 dark:hover:text-primary-300">
            Learn More →
          </a>
        </div>
        
        <div class="card text-center p-8">
          <div class="w-20 h-20 mx-auto mb-4 rounded-full bg-accent-100 dark:bg-accent-900/30 flex items-center justify-center">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10 text-accent-600 dark:text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-3">Community Outreach</h3>
          <p class="text-gray-700 dark:text-gray-300 mb-4">
            Serving our local community through various programs and initiatives to share God's love.
          </p>
          <a href="/ministries/community-outreach" class="text-primary-600 dark:text-primary-400 font-medium hover:text-primary-700 dark:hover:text-primary-300">
            Learn More →
          </a>
        </div>
      </div>
      
      <div class="mt-12 text-center">
        <Button href="/ministries" variant="outline">
          View All Ministries
        </Button>
      </div>
    </div>
  </section>
  
  <!-- Call to Action -->
  <section 
    class="py-20 bg-cover bg-center text-white"
    style="background-image: linear-gradient(rgba(0, 0, 0, 0.6), rgba(0, 0, 0, 0.6)), url(/uploads/thank-you-bg.webp)"
  >
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-6 text-white">Ready to Join Our Community?</h2>
        <p class="text-xl mb-8">
          We'd love to welcome you to our church family. Come visit us this Sunday or reach out with any questions.
        </p>
        
        <div class="flex flex-wrap justify-center gap-4">
          <Button href="/im-new" variant="primary" size="lg">
            I'm New Here
          </Button>
          
          <Button href="/contact" variant="outline" size="lg" class="bg-white/10 text-white border-white hover:bg-white hover:text-gray-900 backdrop-blur-sm">
            Contact Us
          </Button>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>