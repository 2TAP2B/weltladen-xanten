---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Button from "../../components/UI/Button.astro";
import { getEvents, getEventBySlug, getAssetUrl } from "../../utils/directus";

export async function getStaticPaths() {
  const events = await getEvents();
  return events.map((event) => ({
    params: { slug: event.slug },
  }));
}

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect("/events");
}

const event = await getEventBySlug(slug);

if (!event) {
  return Astro.redirect("/events");
}

// Helper function to format date
function formatDate(dateString: string) {
  const date = new Date(dateString);
  return date.toLocaleDateString('de-DE', { 
    weekday: 'long',
    year: 'numeric', 
    month: 'long', 
    day: 'numeric' 
  });
}

// Helper function to format date range
function formatDateRange(startDate: string, endDate?: string | null) {
  if (!endDate || startDate === endDate) {
    return formatDate(startDate);
  }
  
  const start = new Date(startDate);
  const end = new Date(endDate);
  
  if (start.getMonth() === end.getMonth() && start.getFullYear() === end.getFullYear()) {
    return `${start.getDate()}. - ${end.getDate()}. ${start.toLocaleDateString('de-DE', { month: 'long', year: 'numeric' })}`;
  }
  
  return `${formatDate(startDate)} - ${formatDate(endDate)}`;
}

const dateRange = formatDateRange(event.event_date, event.end_date);
---

<BaseLayout
  title={`${event.title} - Weltladen Xanten`}
  description={event.summary || `Details zur Veranstaltung: ${event.title}`}
>
  <!-- Hero Section with Image -->
  {event.featured_image && (
    <section class="relative h-96 bg-gray-900">
      <img 
        src={getAssetUrl(event.featured_image, { width: 1920, height: 800, fit: 'cover', quality: 85 })}
        alt={event.title}
        class="w-full h-full object-cover opacity-70"
      />
      <div class="absolute inset-0 bg-gradient-to-b from-black/50 to-black/70"></div>
      <div class="absolute inset-0 flex items-center justify-center">
        <div class="container text-center text-white">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4">{event.title}</h1>
          {event.summary && (
            <p class="text-xl md:text-2xl max-w-3xl mx-auto">{event.summary}</p>
          )}
        </div>
      </div>
    </section>
  )}

  <!-- Event Details -->
  <section class="py-16 dark:bg-gray-900">
    <div class="container max-w-4xl">
      {!event.featured_image && (
        <h1 class="text-4xl md:text-5xl font-bold mb-8 dark:text-white">{event.title}</h1>
      )}

      <!-- Event Meta Information -->
      <div class="bg-orange-50 dark:bg-orange-900/20 rounded-lg p-6 mb-8 space-y-4">
        <div class="flex items-start">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-orange-600 dark:text-orange-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <div>
            <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Datum</h3>
            <p class="text-gray-700 dark:text-gray-300">{dateRange}</p>
          </div>
        </div>

        {event.time && (
          <div class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-orange-600 dark:text-orange-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Uhrzeit</h3>
              <p class="text-gray-700 dark:text-gray-300">{event.time}</p>
            </div>
          </div>
        )}

        {event.location && (
          <div class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-orange-600 dark:text-orange-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            <div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Ort</h3>
              <p class="text-gray-700 dark:text-gray-300">{event.location}</p>
            </div>
          </div>
        )}

        {event.registration_required && (
          <div class="flex items-start">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-3 text-orange-600 dark:text-orange-400 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-semibold text-gray-900 dark:text-white mb-1">Anmeldung</h3>
              <p class="text-gray-700 dark:text-gray-300">Anmeldung erforderlich</p>
              {event.registration_link && (
                <Button href={event.registration_link} variant="primary" class="mt-3">
                  Jetzt anmelden
                </Button>
              )}
            </div>
          </div>
        )}
      </div>

      <!-- Event Description -->
      {event.description && (
        <div class="prose prose-lg dark:prose-invert max-w-none mb-8">
          <div set:html={event.description} />
        </div>
      )}

      <!-- Tags -->
      {event.tags && event.tags.length > 0 && (
        <div class="mb-8">
          <h3 class="text-xl font-bold mb-4 dark:text-white">Themen</h3>
          <div class="flex flex-wrap gap-2">
            {event.tags.map((tag) => (
              <span class="px-3 py-1 bg-gray-200 dark:bg-gray-700 text-gray-800 dark:text-gray-200 rounded-full text-sm">
                {tag}
              </span>
            ))}
          </div>
        </div>
      )}

      <!-- Back Button -->
      <div class="mt-12 text-center">
        <Button href="/events" variant="secondary">
          ← Zurück zur Übersicht
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
