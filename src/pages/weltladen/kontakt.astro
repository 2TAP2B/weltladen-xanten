---
import WeltladenLayout from "../../layouts/WeltladenLayout.astro";
import PageHeader from "../../components/Sections/PageHeader.astro";
import { getStoreInfo } from "../../utils/directus";

const storeInfo = await getStoreInfo();
---

<WeltladenLayout
  title="Kontakt & Öffnungszeiten - Weltladen Xanten"
  description="Besuchen Sie uns im Weltladen Xanten. Hier finden Sie unsere Öffnungszeiten, Adresse und Kontaktmöglichkeiten."
>
  <PageHeader 
    title="Kontakt & Öffnungszeiten" 
    subtitle="Wir freuen uns auf Ihren Besuch!"
  />

  <section class="py-16 dark:bg-gray-900">
    <div class="container">
      {storeInfo ? (
        <div class="max-w-6xl mx-auto">
          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Öffnungszeiten -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8">
              <div class="flex items-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-3 text-orange-500 dark:text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <h2 class="text-3xl font-bold dark:text-white">Öffnungszeiten</h2>
              </div>
              
              <div class="space-y-4">
                {storeInfo.opening_hours && storeInfo.opening_hours.map((hours: any) => (
                  <div class="flex justify-between items-center py-3 border-b border-gray-200 dark:border-gray-700">
                    <span class="font-medium text-lg text-gray-700 dark:text-gray-300">{hours.days}</span>
                    <span class="text-lg text-gray-600 dark:text-gray-400">{hours.hours}</span>
                  </div>
                ))}
              </div>

              <div class="mt-8 p-4 bg-orange-50 dark:bg-orange-900/20 rounded-lg">
                <p class="text-sm text-gray-700 dark:text-gray-300">
                  <strong>Hinweis:</strong> An Feiertagen und während der Schulferien können abweichende Öffnungszeiten gelten. Aktuelle Informationen finden Sie auf unserer Website oder bei Anruf.
                </p>
              </div>
            </div>

            <!-- Kontaktinformationen -->
            <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md p-8">
              <div class="flex items-center mb-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-3 text-orange-500 dark:text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <h2 class="text-3xl font-bold dark:text-white">Kontakt</h2>
              </div>

              <div class="space-y-6">
                <!-- Adresse -->
                <div class="flex items-start">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-4 text-orange-500 dark:text-orange-400 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  <div>
                    <h3 class="font-bold text-lg mb-1 dark:text-white">Adresse</h3>
                    <p class="text-gray-700 dark:text-gray-300">{storeInfo.store_name}</p>
                    <p class="text-gray-700 dark:text-gray-300">{storeInfo.street}</p>
                    <p class="text-gray-700 dark:text-gray-300">{storeInfo.postal_code} {storeInfo.city}</p>
                  </div>
                </div>

                {/* Telefon */}
                {storeInfo.phone && (
                  <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-4 text-orange-500 dark:text-orange-400 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                    </svg>
                    <div>
                      <h3 class="font-bold text-lg mb-1 dark:text-white">Telefon</h3>
                      <a href={`tel:${storeInfo.phone}`} class="text-orange-500 dark:text-orange-400 hover:underline text-lg">
                        {storeInfo.phone}
                      </a>
                    </div>
                  </div>
                )}

                {/* E-Mail */}
                {storeInfo.email && (
                  <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-4 text-orange-500 dark:text-orange-400 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207" />
                    </svg>
                    <div>
                      <h3 class="font-bold text-lg mb-1 dark:text-white">E-Mail</h3>
                      <a href={`mailto:${storeInfo.email}`} class="text-orange-500 dark:text-orange-400 hover:underline break-all">
                        {storeInfo.email}
                      </a>
                    </div>
                  </div>
                )}

                {/* Website */}
                {storeInfo.website && (
                  <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mr-4 text-orange-500 dark:text-orange-400 flex-shrink-0 mt-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                    </svg>
                    <div>
                      <h3 class="font-bold text-lg mb-1 dark:text-white">Website</h3>
                      <a href={storeInfo.website} target="_blank" rel="noopener noreferrer" class="text-orange-500 dark:text-orange-400 hover:underline break-all">
                        {storeInfo.website}
                      </a>
                    </div>
                  </div>
                )}
              </div>
            </div>
          </div>

          {/* Anfahrt */}
          <div class="mt-12 bg-white dark:bg-gray-800 rounded-lg shadow-md p-8">
            <div class="flex items-center mb-6">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 mr-3 text-orange-500 dark:text-orange-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7" />
              </svg>
              <h2 class="text-3xl font-bold dark:text-white">Anfahrt</h2>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
              <div>
                <h3 class="text-xl font-bold mb-4 dark:text-white">Mit dem Auto</h3>
                <p class="text-gray-700 dark:text-gray-300 mb-4">
                  Parkplätze finden Sie in der Xantener Innenstadt. Der Weltladen ist fußläufig von allen zentralen Parkplätzen erreichbar.
                </p>
                <p class="text-gray-700 dark:text-gray-300">
                  <strong>Nächste Parkplätze:</strong><br>
                  • Parkplatz Markt<br>
                  • Parkhaus Schifferstraße<br>
                  • Parkplatz Nordwall
                </p>
              </div>

              <div>
                <h3 class="text-xl font-bold mb-4 dark:text-white">Mit öffentlichen Verkehrsmitteln</h3>
                <p class="text-gray-700 dark:text-gray-300 mb-4">
                  Der Weltladen ist vom Bahnhof Xanten in ca. 10 Minuten zu Fuß erreichbar.
                </p>
                <p class="text-gray-700 dark:text-gray-300">
                  <strong>Busverbindungen:</strong><br>
                  Diverse Buslinien halten am Xantener Markt oder in der Nähe der Innenstadt.
                </p>
              </div>
            </div>

            {/* Optional: Google Maps Embed */}
            <div class="mt-8">
              <div class="aspect-video bg-gray-200 dark:bg-gray-700 rounded-lg overflow-hidden">
                <iframe
                  width="100%"
                  height="100%"
                  frameborder="0"
                  style="border:0"
                  src={`https://www.openstreetmap.org/export/embed.html?bbox=6.4488%2C51.6582%2C6.4688%2C51.6682&layer=mapnik&marker=51.6632%2C6.4588`}
                  allowfullscreen
                ></iframe>
              </div>
              <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 text-center">
                <a 
                  href={`https://www.openstreetmap.org/?mlat=51.6632&mlon=6.4588#map=16/51.6632/6.4588`}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-orange-500 dark:text-orange-400 hover:underline"
                >
                  Größere Karte anzeigen
                </a>
              </p>
            </div>
          </div>

          {/* Kontaktformular Hinweis */}
          <div class="mt-12 p-8 bg-orange-50 dark:bg-orange-900/20 rounded-lg text-center">
            <h3 class="text-2xl font-bold mb-4 dark:text-white">Sie haben Fragen?</h3>
            <p class="text-lg text-gray-700 dark:text-gray-300 mb-6">
              Zögern Sie nicht, uns zu kontaktieren! Wir helfen Ihnen gerne weiter.
            </p>
            <div class="flex flex-wrap justify-center gap-4">
              <a 
                href={`mailto:${storeInfo.email}`}
                class="inline-flex items-center px-6 py-3 bg-orange-500 hover:bg-orange-600 text-white font-medium rounded-lg transition-colors"
              >
                E-Mail schreiben
              </a>
              <a 
                href={`tel:${storeInfo.phone}`}
                class="inline-flex items-center px-6 py-3 bg-white dark:bg-gray-700 text-orange-500 dark:text-orange-400 font-medium rounded-lg border-2 border-orange-500 dark:border-orange-400 hover:bg-orange-50 dark:hover:bg-gray-600 transition-colors"
              >
                Anrufen
              </a>
            </div>
          </div>
        </div>
      ) : (
        <div class="max-w-4xl mx-auto text-center">
          <p class="text-xl text-gray-600 dark:text-gray-400">
            Kontaktinformationen werden geladen...
          </p>
        </div>
      )}
    </div>
  </section>
</WeltladenLayout>
