---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHeader from "../../components/Sections/PageHeader.astro";
import Card from "../../components/UI/Card.astro";
import { getBlogPosts, getBlogPageHeader, getAssetUrl } from "../../utils/directus";
import { formatDate } from "../../utils/dateUtils";

// Get blog posts from Directus
const posts = await getBlogPosts();
const blogHeader = await getBlogPageHeader();

// Get unique tags for filters
const tags = [...new Set(posts.flatMap(post => post.tags || []).filter(Boolean))];
---

<BaseLayout
  title="Blog - Eine Welt Gruppe Xanten"
  description="Lesen Sie unsere neuesten Artikel, Berichte und Updates aus der Eine Welt Gruppe Xanten."
>
  <PageHeader 
    title={blogHeader?.title || "Blog"} 
    subtitle={blogHeader?.subtitle || "Neuigkeiten, Berichte und Updates"}
    backgroundImage={blogHeader?.background_image ? getAssetUrl(blogHeader.background_image, { width: 1920, height: 600, fit: 'cover' }) : "https://images.unsplash.com/photo-1499750310107-5fef28a66643?w=1920&h=600&fit=crop"}
  />
  
  <!-- Blog Posts List -->
  <section class="py-16">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
        <!-- Filters Sidebar -->
        <div class="lg:col-span-1">
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm sticky top-24">
            <h2 class="text-xl font-bold mb-6 text-gray-900 dark:text-gray-100">Filter</h2>
            
            <!-- Search -->
            <div class="mb-6">
              <label for="search" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Suche</label>
              <input 
                type="text" 
                id="search" 
                placeholder="Beiträge durchsuchen..." 
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            
            <!-- Tags Filter -->
            {
              tags.length > 0 && (
                <div class="mb-6">
                  <h3 class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Schlagwörter</h3>
                  <div class="space-y-2">
                    {tags.map(tag => (
                      <label class="flex items-center">
                        <input type="checkbox" class="tag-checkbox h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-600 rounded" value={tag} />
                        <span class="ml-2 text-gray-700 dark:text-gray-300">{tag}</span>
                      </label>
                    ))}
                  </div>
                </div>
              )
            }
            
            <!-- Author Filter -->
            <div class="mb-6">
              <label for="author" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">Autor</label>
              <input 
                type="text" 
                id="author" 
                placeholder="Nach Autor filtern..." 
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-md focus:ring-primary-500 focus:border-primary-500"
              />
            </div>
            
            <!-- Date Range Filter -->
            <div class="space-y-3">
              <label class="block text-sm font-medium text-gray-700 dark:text-gray-300">Zeitraum</label>
              
              <div>
                <label for="from-date" class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Von</label>
                <input 
                  type="date" 
                  id="from-date" 
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-md focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
              
              <div>
                <label for="to-date" class="block text-xs text-gray-500 dark:text-gray-400 mb-1">Bis</label>
                <input 
                  type="date" 
                  id="to-date" 
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 rounded-md focus:ring-primary-500 focus:border-primary-500"
                />
              </div>
            </div>
            
            <!-- Reset Filters Button -->
            <button 
              id="reset-filters"
              class="w-full mt-6 px-4 py-2 text-sm font-medium text-gray-700 dark:text-gray-300 bg-gray-100 dark:bg-gray-700 rounded-md hover:bg-gray-200 dark:hover:bg-gray-600 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2"
            >
              Filter zurücksetzen
            </button>
          </div>
        </div>
        
        <!-- Blog Posts Grid -->
        <div class="lg:col-span-3">
          <h2 class="text-2xl font-bold mb-6 text-gray-900 dark:text-gray-100">Alle Beiträge</h2>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-8" id="posts-grid">
            {posts.map((post) => (
              <Card
                title={post.title}
                image={post.featured_image ? {
                  src: getAssetUrl(post.featured_image, { width: 800, height: 600, fit: 'cover' }),
                  alt: post.title
                } : undefined}
                href={`/blog/${post.slug}`}
                className="blog-card"
                data-tags={(post.tags || []).join(',')}
                data-author={post.author}
                data-date={post.published_date}
              >
                <div class="mb-3 flex items-center text-gray-600 dark:text-gray-400">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                  <span>{formatDate(new Date(post.published_date))}</span>
                </div>
                
                <div class="mb-3 flex items-center text-gray-600 dark:text-gray-400">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                  <span>{post.author}</span>
                </div>
                
                {post.reading_time && (
                  <div class="mb-3 flex items-center text-gray-600 dark:text-gray-400">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6h4.5m4.5 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span>{post.reading_time} min read</span>
                  </div>
                )}
                
                <p class="text-gray-700 dark:text-gray-300 mb-4">{post.excerpt}</p>
                
                {
                  post.tags && post.tags.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-4">
                      {post.tags.map((tag: string) => (
                        <span class="px-2 py-1 text-xs font-medium text-primary-700 dark:text-primary-400 bg-primary-100 dark:bg-primary-900/30 rounded-full">
                          {tag}
                        </span>
                      ))}
                    </div>
                  )
                }

                <p class="text-primary-600 dark:text-primary-400 font-medium group-hover:underline group-hover:text-primary-700 dark:group-hover:text-primary-300">
                  Mehr lesen →
                </p>
              </Card>
            ))}
          </div>
          
          <!-- No Results Message (Hidden by default) -->
          <div id="no-results" class="hidden text-center py-12 bg-gray-50 dark:bg-gray-800 rounded-lg mt-8">
            <p class="text-gray-600 dark:text-gray-400">Keine Beiträge gefunden. Bitte versuchen Sie andere Filter.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <script is:inline>
    // Filter functionality
    document.addEventListener('DOMContentLoaded', function() {
      const searchInput = document.getElementById('search');
      const authorInput = document.getElementById('author');
      const tagCheckboxes = document.querySelectorAll('.tag-checkbox');
      const fromDateInput = document.getElementById('from-date');
      const toDateInput = document.getElementById('to-date');
      const resetButton = document.getElementById('reset-filters');
      const postsGrid = document.getElementById('posts-grid');
      const noResults = document.getElementById('no-results');
      const blogCards = document.querySelectorAll('.blog-card');
      
      console.log('Blog filter initialized');
      console.log('Blog cards found:', blogCards.length);
      
      // Debug: log all cards data
      blogCards.forEach(function(card, index) {
        console.log('Card ' + index + ':', {
          tags: card.getAttribute('data-tags'),
          author: card.getAttribute('data-author'),
          date: card.getAttribute('data-date')
        });
      });
      
      // Function to filter blog posts
      const filterPosts = function() {
        const searchTerm = (searchInput && searchInput.value) ? searchInput.value.toLowerCase() : '';
        const authorTerm = (authorInput && authorInput.value) ? authorInput.value.toLowerCase() : '';
        const fromDate = (fromDateInput && fromDateInput.value) ? fromDateInput.value : '';
        const toDate = (toDateInput && toDateInput.value) ? toDateInput.value : '';
        
        // Get selected tags (normalize to lowercase and trim)
        const selectedTags = [];
        tagCheckboxes.forEach(function(checkbox) {
          if (checkbox.checked) {
            selectedTags.push(checkbox.value.toLowerCase().trim());
          }
        });
        
        console.log('Filtering with:', { 
          searchTerm: searchTerm, 
          authorTerm: authorTerm, 
          fromDate: fromDate, 
          toDate: toDate, 
          selectedTags: selectedTags 
        });
        
        let visibleCount = 0;
        
        blogCards.forEach(function(card, index) {
          // Get all text content from the card
          const titleElement = card.querySelector('h3');
          const title = titleElement ? titleElement.textContent.toLowerCase() : '';
          
          // Get excerpt paragraph (the one with excerpt content, not the "Mehr lesen" one)
          const paragraphs = card.querySelectorAll('p');
          let excerpt = '';
          paragraphs.forEach(function(p) {
            const text = p.textContent;
            if (text && !text.includes('Mehr lesen') && !text.includes('min read')) {
              excerpt = text.toLowerCase();
            }
          });
          
          const author = card.getAttribute('data-author') ? card.getAttribute('data-author').toLowerCase() : '';
          const date = card.getAttribute('data-date') || '';
          const tagsAttr = card.getAttribute('data-tags') || '';
          // Normalize tags to lowercase and trim
          const tags = tagsAttr.split(',').map(function(t) { return t.trim().toLowerCase(); }).filter(function(t) { return t !== ''; });
          
          console.log('Card ' + index + ' data:', { title: title, author: author, date: date, tags: tags });
          
          // Check if post matches all filters
          const matchesSearch = !searchTerm || title.includes(searchTerm) || excerpt.includes(searchTerm);
          const matchesAuthor = !authorTerm || author.includes(authorTerm);
          const matchesFromDate = !fromDate || date >= fromDate;
          const matchesToDate = !toDate || date <= toDate;
          
          // Check if post has at least one of the selected tags (or if no tags are selected)
          let matchesTags = selectedTags.length === 0;
          if (!matchesTags) {
            for (let i = 0; i < selectedTags.length; i++) {
              for (let j = 0; j < tags.length; j++) {
                if (tags[j] === selectedTags[i]) {
                  matchesTags = true;
                  break;
                }
              }
              if (matchesTags) break;
            }
          }
          
          console.log('Card ' + index + ' matches:', { 
            search: matchesSearch, 
            author: matchesAuthor, 
            fromDate: matchesFromDate, 
            toDate: matchesToDate, 
            tags: matchesTags 
          });
          
          // Show/hide the blog card
          if (matchesSearch && matchesAuthor && matchesFromDate && matchesToDate && matchesTags) {
            card.style.display = '';
            visibleCount++;
          } else {
            card.style.display = 'none';
          }
        });
        
        console.log('Visible cards after filtering:', visibleCount);
        
        // Show/hide no results message
        if (noResults) {
          if (visibleCount === 0) {
            noResults.style.display = 'block';
            noResults.classList.remove('hidden');
          } else {
            noResults.style.display = 'none';
            noResults.classList.add('hidden');
          }
        }
      };
      
      // Add event listeners
      if (searchInput) {
        searchInput.addEventListener('input', filterPosts);
      }
      if (authorInput) {
        authorInput.addEventListener('input', filterPosts);
      }
      tagCheckboxes.forEach(function(checkbox) {
        checkbox.addEventListener('change', filterPosts);
      });
      if (fromDateInput) {
        fromDateInput.addEventListener('change', filterPosts);
      }
      if (toDateInput) {
        toDateInput.addEventListener('change', filterPosts);
      }
      
      // Reset filters
      if (resetButton) {
        resetButton.addEventListener('click', function() {
          if (searchInput) searchInput.value = '';
          if (authorInput) authorInput.value = '';
          tagCheckboxes.forEach(function(checkbox) {
            checkbox.checked = false;
          });
          if (fromDateInput) fromDateInput.value = '';
          if (toDateInput) toDateInput.value = '';
          
          filterPosts();
        });
      }
    });
  </script>
</BaseLayout>
